{% extends "./base.njk" %}


{% block main%}
    {% include "../_partials/_banner.njk" %}

    <div class="collage max-width">
        {% for item in collections.projects %}
            <div class="card">
                <a href="{{ item.page.url }}" class="card_link">
                    <p class="card_title">{{ item.data.title | safe }} - {{ item.data.category | safe }}</p>
                    <img src="../images/projects/{{ item.data.image }}" />
                </a>
            </div>
        {% endfor %}
    </div>
    
{% endblock main %}

