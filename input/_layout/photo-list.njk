{% extends "./base.njk" %}

{% set mode = "light" %}

{% block main%}
    {% include "../_partials/_banner.njk" %}

    <div class="collage max-width">
        {% for item in collections[iterator] %}
            <div class="card">
                <a href="{{ item.page.url }}">
                {% if collections[iterator] == collections.blog%}
                    <p class="card_category">{{ item.data.category }}</p>
                    <p class="card_title">{{ item.data.title }}</p>
                    <img src="../images/{{ item.data.image }}" />
                    {% else %}
                    <p class="card_title">{{ item.data.category }} - {{ item.data.title }}</p>
                    <img src="../images/{{ [iterator] }}/{{ item.data.image }}" />
                {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock main %}
