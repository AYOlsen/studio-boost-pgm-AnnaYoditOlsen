{% extends "./base.njk" %}

{% block main%}
    <div class="columns-top">
        <div class="columns__text">
            {% block topleft %}
            {% endblock topleft %}
        </div>
        <div class="columns__column">
            {% block topright %}
                <img src="{{ image[0] }}"/>
            {% endblock topright %}
        </div>
    </div>
        
    <div class="columns-bottom">
        <div class="columns__column">
            {% block bottomleft %}
                <img src="{{ image[1] }}"/>
            {% endblock bottomleft %}
        </div>
        <div class="columns__text">
            {% block bottomright %}
            {% endblock bottomright %}
        </div>
    </div>
    
    <div class="columns__centered">
        {% block bottom%}
        {% endblock bottom%}
    </div>
{% endblock main%}