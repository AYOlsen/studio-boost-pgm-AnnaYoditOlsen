{% macro hero(title, category, description, hero) %}
    <article class="hero">
        <div class="hero-img">
                <img src="../../images/{{ hero }}"/>
        </div>
        <div class="hero-text">
            <p>{{ category }}</p>
            <h1>{{ title }}</h1>
            <p>{{ description }}</p>
        </div>
    </article>
{% endmacro%}