<article class="hero">
    {% if page.url.includes("/projects/") %}
        <div class="hero-img">
            <img src="../../images/{{ hero }}"/>
        </div>
    {% else %}
        <video autoplay muted loop id="myVideo">
            <source src="../images/{{ hero }}" type="video/mp4">
        </video>
    {% endif %}
    <div class="hero-text">
        <p>{{ category }}</p>
        <h1>{{ title }}</h1>
        <p>{{ description }}</p>
    </div>
    <div class="socials">
            {% for social in socials%}
                <a >
                    <img src="{{ social.img }}" />
                </a>
            {% endfor %}
        </div>
</article>